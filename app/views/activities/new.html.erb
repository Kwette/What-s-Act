
    <div class="container-new-activity">
    <h1>New activity</h1>
    <div class="d-flex">
      <div class="col-md-6">
        <%= simple_form_for @activity do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :max_participants %>
        <%= f.input :address %>
        <%= f.input :type_activity, collection: ["#Sport", "#Culture", "#Children_Friendly", "#Fun_And_Game", "#Nature", "#Beach_life", "#Eat_And_Drink", "Extreme"] %>
      </div>
         <div class="col-md-4">
           <%= f.input :start_date, as: :string, input_html: { id: "range_start" } %>
           <%= f.input :end_date, as: :string, input_html: {id: "range_end"} %>
           <%= f.input :photo %>
           <%= f.input :photo_cache, as: :hidden %>
           <%= f.button :submit, class: "btn btn-outline-primary" %>
        <% end %>
      </div>
    </div>
    </div>
