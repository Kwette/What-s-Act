<div class="d-flex flex-grow flex-column">
  <div class="header-container mini-header d-flex align-items-center justify-content-center">
    <h2>Sign in</h2>
  </div>
  <div class="d-flex align-items-center justify-content-center mt-4 mb-4 align-self-stretch">
    <div class="log-container d-flex justify-content-between align-items-center" style="width: 50%">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs mb-2">
        <%= f.input :email,
        required: false,
        autofocus: true,
        input_html: { autocomplete: "email" } %>
        <%= f.input :password,
        required: false,
        input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="btn btn-green d-flex justify-content-center mt-2 align-items-center" style="width: 100%; float: right;">
        <%= f.button :submit, "LOG IN", class: 'btn btn-green' %>
      </div>
    </div>
    <% end %>
      <div class="d-flex justify-content-center align-items-center flex-column mt-4 mb-4">
        <p>Or</p>
        <%= render "devise/shared/links" %>
      </div>
  </div>
</div>

