<div class="header-container mini-header d-flex align-items-center justify-content-center">
  <h2>Sign up</h2>
</div>
<div class="inscription-container d-flex align-items-center justify-content-center mt-4 mb-4">
  <div class="log-container d-flex justify-content-between">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :pseudo,
      required: true,
      autofocus: true,
      input_html: { autocomplete: "Pseudo" }%>
      <%= f.input :email,
      required: true,
      autofocus: true,
      input_html: { autocomplete: "email" }%>
      <%= f.input :password,
      # hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
      placeholder: '6 characters minimum',
      required: true,
      input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
      :label => "Confirmation",
      required: true,
      input_html: { autocomplete: "new-password" } %>
    </div>
    <div class="d-flex justify-content-center">
      <div class="btn btn-green d-flex justify-content-center mt-4 align-items-center" style="width: 100%">
        <%= f.button :submit, "SIGN UP", class: "btn btn-green" %>
      </div>
    </div>
    <% end %>

  </div>
  <div class="d-flex justify-content-center align-items-center flex-column" >
      <p>Or</p>
      <%= render "devise/shared/links" %>
  </div>
</div>
